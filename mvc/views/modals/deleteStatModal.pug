.modal#delete-stat-modal(tabindex="-1" aria-labelledby="delete-stat-label" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false")
    .modal-dialog.modal-dialog-centered
        .modal-content#delete-stat-modal-content
            input#delete-game(type="hidden")
            input#delete-id(type="hidden")
            .modal-header
                h5.modal-title#delete-stat-label Delete Custom Stat?
            .modal-body Are you sure you want to delete this stat?
            .modal-footer
                button#confirm-delete-stat.btn.btn-primary(type="button") Yes
                button#cancel-delete-stat.btn.btn-secondary(type="button" data-bs-dismiss="modal") No